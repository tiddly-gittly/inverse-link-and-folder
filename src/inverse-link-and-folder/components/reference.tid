title: $:/plugins/linonetwo/inverse-link-and-folder/components/reference

\whitespace trim
\procedure lingo-base() $:/plugins/linonetwo/inverse-link-and-folder/language/

<%if [all[current]backlinks[]!is[system]sort[title]] -[is[current]] +[limit[1]] %>
	<ul class="inverse-link-and-folder-references">
    <li class="inverse-link-and-folder-references-title">
      <strong><<lingo "RelatedReferences">></strong>
    </li>
    <$list filter="[all[current]backlinks[]!is[system]sort[title]] -[is[current]]">
      <li class="inverse-link-and-folder-references-reference">
        <$link>
          <b><$view field="title" /></b>
          <div class="inverse-link-and-folder-references-content">
            <$transclude field="text" mode="inline" />
          </div>
        </$link>
      </li>
    </$list>
	</ul>
<%endif%>
